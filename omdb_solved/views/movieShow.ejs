<h1> (<%= movie.Year %>) <%= movie.Title %></h1>

<div class="row">
	<div class="col-xs-4">
		<img src="<%= movie.Poster %>" />
	</div>
	<div class="well col-xs-4">
  		<p>
  			<strong>Plot: </strong>
  			<%= movie.Plot %>
  		</p>

  		<br>

		<button type="button" id="favorite-btn" data-imdbId="<%= movie.imdbID %>" class="btn btn-success">
			Add to Favorites
		</button>
		<a href="<%= '/movies/?q=' + q %>" class="btn btn-primary">&larr; Back to Search</a>
	</div>
	<div class="col-xs-4">
	</div>
</div>